#! /bin/bash
TYPE="A"
while [ $# -gt 0 ]; do
	if [ "$1" == "-k" ]; then
		# Set TTL
		shift
		if [ $# -eq 0 ]; then echo "Error: Missing argument to -k"; exit 1; fi
		TYPE="$1"
	else
		if [ "$DOMAIN" == "" ]; then
			DOMAIN="$1"
		else
			echo "Unexpected argument"
			exit 1
		fi
	fi
	shift
done

cat <<EOF | nsupdate -v -k /etc/bind/keys/*localhost*.key
server 127.0.0.1
update delete $DOMAIN $TYPE
send
EOF
